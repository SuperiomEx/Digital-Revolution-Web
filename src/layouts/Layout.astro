---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = 'Digital Revolution Web | Comunidad de Talentos',
  description = 'La plataforma oficial de la comunidad de talentos de Cuba. Descubre y conecta con creadores en arte, m√∫sica, desarrollo y escritura.',
  image = '/favicon.svg',
} = Astro.props;

const canonicalURL = new URL(
  Astro.url.pathname,
  Astro.site || 'https://digital-revolution-web.vercel.app/',
);
const absImage = new URL(
  image,
  Astro.site || 'https://digital-revolution-web.vercel.app/',
).toString();
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Favicon -->
    <link
      rel="icon"
      type="image/png"
      href="/favicon/favicon-96x96.png"
      sizes="96x96"
    />
    <link rel="shortcut icon" href="/favicon/favicon.ico" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicon/apple-touch-icon.png"
    />
    <meta name="apple-mobile-web-app-title" content="Digital Revolution Web" />
    <link rel="manifest" href="/favicon/site.webmanifest" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={absImage} />
    <meta property="og:locale" content="es_ES" />
    <!-- Recommended OG image dimensions: 1200x630 -->
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={absImage} />
    <meta name="twitter:creator" content="@drwebcuba" />
    <meta name="robots" content="index, follow" />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Digital Revolution Web",
        "url": "${(Astro.site || 'https://digital-revolution-web.vercel.app/').toString()}",
        "image": "${absImage}",
        "potentialAction": {
          "@type": "SearchAction",
          "target": "${(Astro.site || 'https://digital-revolution-web.vercel.app/').toString()}search?q={search_term_string}",
          "query-input": "required name=search_term_string"
        }
      }
    </script>
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Digital Revolution Web",
        "url": "${(Astro.site || 'https://digital-revolution-web.vercel.app/').toString()}",
        "logo": "${new URL('/favicon.svg', Astro.site || 'https://digital-revolution-web.vercel.app/').toString()}",
        "sameAs": [
          "https://twitter.com/digitalrev",
          "https://instagram.com/digitalrev"
        ]
      }
    </script>
  </head>
  <body>
    <Header />
    <script type="module" src="/src/client/initializers/header.ts"></script>
    <script type="module" src="/src/client/initializers/responsive-images.ts"
    ></script>
    <script type="module" src="/src/client/initializers/join-community.ts"
    ></script>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: var(--color-brand-background-global);
    color: #ffffff;
  }
</style>
