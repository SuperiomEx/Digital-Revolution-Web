---
/**
 * Button Component - Base UI Component
 * Reusable button with variants and consistent styling
 */

interface Props {
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  ariaLabel?: string;
  class?: string;
}

const {
  variant = 'primary',
  size = 'md',
  type = 'button',
  disabled = false,
  ariaLabel,
  class: className = '',
} = Astro.props;

const variantClasses = {
  primary: 'bg-blue-500 text-white hover:bg-blue-700 focus:ring-blue-400',
  secondary: 'bg-gray-500 text-white hover:bg-gray-700 focus:ring-gray-400',
  outline:
    'border-2 border-blue-500 text-blue-500 hover:bg-blue-50 focus:ring-blue-400',
  ghost: 'text-blue-500 hover:bg-blue-50 focus:ring-blue-400',
};

const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-lg',
};

const baseClasses =
  'rounded-full font-bold transition duration-300 focus:ring-2 focus:outline-none disabled:opacity-50 disabled:cursor-not-allowed';
const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`;
---

<button type={type} class={classes} disabled={disabled} aria-label={ariaLabel}>
  <slot />
</button>
