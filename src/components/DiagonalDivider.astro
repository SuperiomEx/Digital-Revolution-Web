---
/**
 * DiagonalDivider Component
 * 
 * Creates a diagonal SVG divider between sections with customizable color
 */

interface Props {
  color: string;
  direction?: 'down' | 'up';
  className?: string;
}

const { color, direction = 'down', className = '' } = Astro.props;
const isUp = direction === 'up';
---

<div class={`diagonal-divider ${className}`}>
  <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
    <polygon points={isUp ? "0,120 1200,0 1200,120" : "0,0 1200,120 0,120"} fill={color} />
  </svg>
</div>

<style>
  .diagonal-divider {
    position: relative;
    height: clamp(60px, 8vw, 120px);
    width: 100%;
    overflow: hidden;
    margin-top: -1px; /* Evitar huecos por anti-aliasing */
    z-index: 1;
  }

  .diagonal-divider svg {
    width: 100%;
    height: 100%;
    display: block;
  }
</style>
