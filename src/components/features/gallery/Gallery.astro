---
/**
 * Gallery Component
 * Main gallery container that orchestrates controls and slider
 */
import type { CategoryConfig } from '../../../types/gallery.types';
import GalleryControls from './GalleryControls.astro';
import GallerySlider from './GallerySlider.astro';

interface Props {
  categories: CategoryConfig[];
  id?: string;
}

const { categories, id = 'galeria' } = Astro.props;
---

<section id={id} class="gallery-section">
  <link rel="stylesheet" href="/src/styles/animations.css" />

  <GalleryControls categories={categories} />
  <GallerySlider categories={categories} />
</section>

<style>
  .gallery-section {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 80dvh;
    width: 100%;
    background: #030712;
    overflow: hidden;
    padding: 4rem 1rem;
  }

  @media (max-width: 640px) {
    .gallery-section {
      min-height: 70dvh;
      padding: 2rem 0.5rem;
    }
  }

  @media (min-width: 641px) and (max-width: 768px) {
    .gallery-section {
      padding: 3rem 1rem;
    }
  }
</style>
