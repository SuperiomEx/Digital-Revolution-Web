---
/**
 * ConcursoCard - Contest card component
 * Displays contest information with image, category, status, and dates
 */

import { CATEGORY_LABELS, STATUS_CONFIG } from '../../config/concursosConfig';
import type {
  ConcursoCategory,
  ConcursoStatus,
} from '../../types/concursos.types';
import { formatDate } from '../../utils/concursosUtils';

interface Props {
  id: string;
  slug: string;
  title: string;
  category: ConcursoCategory;
  status: ConcursoStatus;
  image: string;
  imageAlt: string;
  fechaCierre: Date;
  featured?: boolean;
}

const {
  id,
  slug,
  title,
  category,
  status,
  image,
  imageAlt,
  fechaCierre,
  featured = false,
} = Astro.props;

const statusInfo = STATUS_CONFIG[status];
---

<article class={`concurso-card ${featured ? 'featured' : ''}`} data-id={id}>
  <a href={`/concursos/${slug}`} class="card-link">
    <div class="card-image-wrapper">
      <img src={image} alt={imageAlt} class="card-image" loading="lazy" />
      <div class="card-overlay"></div>
      {featured && <span class="featured-badge">Destacado</span>}
      <span class={`status-badge ${statusInfo.class}`}>
        {statusInfo.label}
      </span>
    </div>

    <div class="card-content">
      <div class="card-category">
        {CATEGORY_LABELS[category]}
      </div>

      <h3 class="card-title">{title}</h3>

      <div class="card-footer">
        <div class="card-date">
          <svg
            class="icon-calendar"
            width="16"
            height="16"
            viewBox="0 0 16 16"
            fill="none"
            aria-hidden="true"
          >
            <path
              d="M12.667 2.667H3.333A.667.667 0 0 0 2.667 3.333v9.334a.667.667 0 0 0 .666.666h9.334a.667.667 0 0 0 .666-.666V3.333a.667.667 0 0 0-.666-.666ZM10.667 1.333v2.667M5.333 1.333v2.667M2.667 6.667h10.666"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
          <span>Cierre: {formatDate(fechaCierre)}</span>
        </div>

        <span class="card-cta">
          Ver detalles
          <svg
            class="icon-arrow"
            width="16"
            height="16"
            viewBox="0 0 16 16"
            fill="none"
            aria-hidden="true"
          >
            <path
              d="M3.333 8h9.334M9.333 4.667 12.667 8l-3.334 3.333"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </span>
      </div>
    </div>
  </a>
</article>

<style>
  .concurso-card {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    background: rgba(var(--palette-brand-navy-rgb), 0.4);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(var(--palette-accent-cyan-rgb), 0.1);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    height: 100%;
  }

  .concurso-card:hover {
    transform: translateY(-8px);
    border-color: rgba(var(--palette-accent-cyan-rgb), 0.4);
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.4),
      0 0 20px rgba(var(--palette-accent-cyan-rgb), 0.2);
  }

  .concurso-card.featured {
    border-color: rgba(var(--palette-accent-orange-rgb), 0.3);
  }

  .concurso-card.featured:hover {
    border-color: rgba(var(--palette-accent-orange-rgb), 0.6);
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.4),
      0 0 30px rgba(var(--palette-accent-orange-rgb), 0.3);
  }

  .card-link {
    display: block;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }

  .card-image-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .concurso-card:hover .card-image {
    transform: scale(1.08);
  }

  .card-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(var(--palette-background-rgb), 0.4) 60%,
      rgba(var(--palette-background-rgb), 0.9) 100%
    );
    opacity: 0.8;
    transition: opacity 0.4s ease;
  }

  .concurso-card:hover .card-overlay {
    opacity: 1;
  }

  .featured-badge {
    position: absolute;
    top: 16px;
    left: 16px;
    padding: 6px 14px;
    background: linear-gradient(
      135deg,
      var(--palette-accent-orange),
      var(--palette-accent-yellow)
    );
    color: var(--palette-brand-dark);
    font-size: 0.75rem;
    font-weight: 700;
    font-family: var(--font-barlow);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    border-radius: 8px;
    z-index: 2;
  }

  .status-badge {
    position: absolute;
    top: 16px;
    right: 16px;
    padding: 6px 14px;
    font-size: 0.75rem;
    font-weight: 600;
    font-family: var(--font-barlow);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    border-radius: 8px;
    backdrop-filter: blur(8px);
    z-index: 2;
  }

  .status-active {
    background: rgba(var(--palette-accent-cyan-rgb), 0.2);
    color: var(--palette-accent-cyan);
    border: 1px solid rgba(var(--palette-accent-cyan-rgb), 0.4);
  }

  .status-upcoming {
    background: rgba(var(--palette-accent-purple-rgb), 0.2);
    color: var(--palette-accent-purple);
    border: 1px solid rgba(var(--palette-accent-purple-rgb), 0.4);
  }

  .status-finished,
  .status-closed {
    background: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .card-content {
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .card-category {
    font-size: 0.813rem;
    font-weight: 600;
    font-family: var(--font-barlow);
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--palette-accent-cyan);
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: 700;
    font-family: var(--font-barlow);
    color: #fff;
    line-height: 1.3;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
    padding-top: 12px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .card-date {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
    font-family: var(--font-rubik);
  }

  .icon-calendar {
    flex-shrink: 0;
    opacity: 0.8;
  }

  .card-cta {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--palette-accent-cyan);
    font-family: var(--font-barlow);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: gap 0.3s ease;
  }

  .concurso-card:hover .card-cta {
    gap: 10px;
  }

  .icon-arrow {
    flex-shrink: 0;
    transition: transform 0.3s ease;
  }

  .concurso-card:hover .icon-arrow {
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .card-title {
      font-size: 1.125rem;
    }

    .card-content {
      padding: 16px;
    }

    .card-footer {
      flex-direction: column;
      align-items: flex-start;
      gap: 10px;
    }
  }
</style>
