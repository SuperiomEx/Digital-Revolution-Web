---
import type { MusicGalleryItem } from '../../data/types';

interface Props {
  item: MusicGalleryItem;
}

const { item } = Astro.props;
---

<div
  class="gallery-item musica-item relative shrink-0 overflow-hidden rounded-[25px]"
  style="width: 285px; padding-left: 8px; padding-right: 8px; display: none;"
  data-category="musica"
>
  <div class="music-card h-110 w-full overflow-hidden rounded-[25px]">
    <div class="music-card-content">
      <img
        src={item.image}
        alt={`Album cover for ${item.title} by ${item.artist}`}
        width="285"
        height="380"
        class="music-album-cover"
        loading="lazy"
      />
      <div class="music-info">
        <button
          class="play-button"
          aria-label={`Play ${item.title}`}
          aria-pressed="false"
        >
          <svg
            width="36"
            height="36"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
            aria-hidden="true"
          >
            <circle cx="12" cy="12" r="10" fill="#FFC943"></circle>
            <path d="M10 8L16 12L10 16V8Z" fill="#041421"></path>
          </svg>
        </button>
        <div class="music-text">
          <h3 class="music-title">{item.title}</h3>
          <p class="music-artist">{item.artist}</p>
        </div>
        <span class="music-duration" aria-label={`Duration ${item.duration}`}
          >{item.duration}</span
        >
      </div>
    </div>
  </div>
</div>

<style>
  /* Ensure sizing includes borders/padding */
  .gallery-item {
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
  }

  .music-card {
    background: var(--palette-brand-dark);
    position: relative;
    display: flex;
    flex-direction: column;
    padding: 0;
    box-sizing: border-box; /* include border in sizing to avoid content cropping */
    border: 3px solid var(--palette-accent-yellow);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease,
      border-color 0.3s ease;
    min-height: 440px; /* ensure content area always has enough room */
  }

  .music-card:hover {
    transform: translateY(1px);
    box-shadow: var(--shadow-accent-orange);
    border-color: var(--palette-accent-orange);
    z-index: 6; /* make sure hover state is above siblings */
  }

  .music-card-content {
    display: flex;
    flex-direction: column;
    height: 100%;
    box-sizing: border-box;
  }

  .music-album-cover {
    width: 100%;
    height: 250px;
    object-fit: cover;
    border-radius: 22px 22px 0 0;
    flex-shrink: 0;
  }

  .music-info {
    flex: 1;
    display: flex;
    align-items: center; /* center content vertically so items are visible when not hovered */
    gap: 12px;
    padding: 16px 14px;
    background: var(--palette-brand-dark);
    min-height: 100px;
    overflow: visible; /* allow wrapped text to show */
  }

  .music-text {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 4px;
    min-width: 0;
    overflow: visible;
  }

  .music-title {
    color: #ffffff;
    font-size: 1.125rem;
    font-weight: 700;
    margin: 0;
    line-height: 1.2;
    overflow: hidden;
    /* allow up to 2 lines for long titles */
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .music-artist {
    color: #a0a0a0;
    font-size: 0.875rem;
    margin: 0;
    font-weight: 400;
    /* allow artist to wrap onto multiple lines so it doesn't get cut off */
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: normal;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .play-button {
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s ease;
    flex-shrink: 0;
  }

  .play-button:hover {
    transform: scale(1.15);
  }

  .play-button:focus {
    outline: 2px solid var(--palette-accent-cyan);
    outline-offset: 2px;
    border-radius: 50%;
  }

  .music-duration {
    color: #ffffff;
    font-size: 0.875rem;
    font-weight: 600;
    flex-shrink: 0;
    margin-left: 8px;
  }

  /* Responsive sizing - solo ajustar contenedor */
  @media (max-width: 640px) {
    .gallery-item {
      width: calc(100vw - 80px) !important;
      max-width: 285px !important;
    }
    .music-album-cover {
      height: 180px;
    }
    .music-info {
      padding: 14px 12px;
      gap: 10px;
    }
    .music-title {
      font-size: 0.975rem;
    }
    .music-artist {
      font-size: 0.8rem;
    }
  }

  @media (min-width: 641px) and (max-width: 768px) {
    .gallery-item {
      width: calc((100vw - 100px) / 2) !important;
      max-width: 285px !important;
    }
  }

  @media (min-width: 769px) and (max-width: 1023px) {
    .gallery-item {
      width: calc((100vw - 120px) / 3) !important;
      max-width: 285px !important;
    }
  }

  @media (min-width: 1024px) {
    .gallery-item {
      width: 285px !important;
    }
  }

  /* allow hover lift/outlines to be visible and not clipped by overflow */
  /* Ensure cards don't clip their own outlines/content even when not hovered */
  .gallery-item.musica-item,
  .gallery-item.fotografia-item {
    overflow: visible !important;
  }

  /* Lift hovered card above siblings to avoid overlap/clipping */
  .gallery-item:hover {
    z-index: 40;
  }
</style>
