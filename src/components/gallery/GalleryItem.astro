---
import type { ArteGalleryItem } from '../../data/types';

interface Props {
  item: ArteGalleryItem;
}

const { item } = Astro.props;
---

<div
  class="gallery-item arte-item relative shrink-0 overflow-hidden rounded-[25px]"
  style="width: 285px; padding-left: 8px; padding-right: 8px;"
  data-category="arte"
>
  <img
    src={item.image}
    alt={item.title}
    width="285"
    height="380"
    class="min-h-110 w-full rounded-[25px] object-cover shadow-md transition duration-300"
    loading="lazy"
  />
  <div class="artist-overlay">
    <div class="artist-info">
      <h3 class="artist-name">{item.artistName}</h3>
      <p class="artist-role">{item.artistRole}</p>
    </div>
  </div>
  <div class="image-overlay" aria-hidden="true"></div>
  <div aria-hidden="true"></div>
</div>

<style>
  .shine-effect {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    background: var(--gradient-shine-cyan);
    transform: translate3d(-100%, 0, 0);
    pointer-events: none;
    z-index: 2;

    will-change: transform, opacity;
    backface-visibility: hidden;
    transition:
      transform 0.7s ease,
      opacity 0.3s ease;
  }

  .gallery-item:hover .shine-effect {
    opacity: 1;
    transform: translate3d(100%, 0, 0);
  }

  /* Allow arte cards to show bottoms and shadows (fix clipping) */
  .gallery-item.arte-item {
    overflow: visible !important;
  }

  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.06);
    pointer-events: none;
    z-index: 1;
    transition: opacity 0.3s ease;
    will-change: opacity;
  }

  .gallery-item:hover .image-overlay {
    opacity: 0;
  }

  /* ensure sizing includes borders/padding and images fill the card cleanly */
  .gallery-item {
    box-sizing: border-box;
    /* Make container height match the image's rendered height */
    display: flex;
    flex-direction: column;
  }

  .gallery-item img {
    display: block;
    width: 100%;
    height: calc(

    ); /* Let image determine its own height based on aspect ratio */
    min-height: 440px; /* Maintain minimum height */
    object-fit: cover;
  }

  .artist-overlay {
    position: absolute;
    /* Use inset to cover the exact area of the parent container */
    inset: 0;
    background: rgba(255, 201, 67, 0.95);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    pointer-events: none;
    z-index: 3;
    transition: opacity 0.3s ease;
    border-radius: 25px;
    padding: 30px 20px;
  }

  .gallery-item:hover .artist-overlay {
    opacity: 1;
  }

  .artist-info {
    text-align: center;
    width: 100%;
    max-width: 100%;
  }

  .artist-name {
    font-family: var(--font-barlow);
    font-size: 3rem;
    font-weight: 700;
    color: var(--palette-brand-dark);
    margin: 0 0 8px 0;
    line-height: 1;
    text-transform: capitalize;
  }

  .artist-role {
    font-family: var(--font-rubik);
    font-size: 1rem;
    font-weight: 500;
    color: var(--palette-brand-dark);
    margin: 0;
    line-height: 1.3;
  }

  .gallery-item img {
    filter: brightness(0.95);
    transition: filter 0.3s;
  }

  .gallery-item:hover img {
    filter: brightness(1);
    transform: scale(1);
  }

  /* Responsive sizing - mantener proporciones */
  @media (max-width: 640px) {
    .gallery-item {
      width: calc(100vw - 80px) !important;
      max-width: 285px !important;
    }
    .gallery-item img {
      min-height: 380px; /* Use min-height instead of height to allow growth */
    }
    .artist-name {
      font-size: 1.75rem;
    }
    .artist-role {
      font-size: 0.875rem;
    }
  }

  @media (min-width: 641px) and (max-width: 768px) {
    .gallery-item {
      width: calc((100vw - 100px) / 2) !important;
      max-width: 285px !important;
    }
    .artist-name {
      font-size: 2rem;
    }
  }

  @media (min-width: 769px) and (max-width: 1023px) {
    .gallery-item {
      width: calc((100vw - 120px) / 3) !important;
      max-width: 285px !important;
    }
    .artist-name {
      font-size: 2.25rem;
    }
  }

  @media (min-width: 1024px) {
    .gallery-item {
      width: 285px !important;
    }
    .artist-name {
      font-size: 3rem;
    }
  }
</style>
