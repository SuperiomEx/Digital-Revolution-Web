---
/**
 * ConcursoCard Component
 * Tarjeta para mostrar concursos activos con fecha como badge
 */

export interface Props {
  title: string;
  date: string;
  imageUrl: string;
  altText: string;
  ctaLink: string;
  ctaText: string;
}

const { title, date, imageUrl, altText, ctaLink, ctaText } = Astro.props;
---

<article
  class="group bg-brand-dark flex w-full max-w-[320px] flex-col overflow-hidden rounded-2xl shadow-lg transition-all duration-300 hover:-translate-y-1 hover:shadow-2xl"
>
  <!-- Imagen -->
  <div class="relative h-40 overflow-hidden sm:h-48">
    <img
      src={imageUrl}
      alt={altText}
      loading="lazy"
      class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
    />
  </div>

  <!-- Contenido -->
  <div class="flex flex-col gap-3 p-4">
    <h3
      class="line-clamp-2 text-base leading-snug font-semibold text-white sm:text-lg"
    >
      {title}
    </h3>

    <div class="mt-auto flex items-center justify-between gap-2">
      <!-- Fecha -->
      <span
        class="rounded-full bg-orange-400/20 px-3 py-1 text-xs font-medium whitespace-nowrap text-orange-400"
      >
        {date}
      </span>

      <!-- CTA -->
      <a
        href={ctaLink}
        class="hover:text-brand-dark focus-visible:ring-offset-brand-dark inline-flex items-center justify-center rounded-lg border-2 border-orange-400 px-4 py-2 text-sm font-semibold text-orange-400 transition-all duration-300 hover:bg-orange-400 focus:outline-none focus-visible:ring-2 focus-visible:ring-orange-400 focus-visible:ring-offset-2"
      >
        {ctaText}
      </a>
    </div>
  </div>
</article>
