---
import ColaboracionesDestacadas from '../components/ColaboracionesDestacadas.astro';
import ColaboracionesDestacadasTitle from '../components/ColaboracionesDestacadasTitle.astro';
import Concursos from '../components/Concursos.astro';
import DinamycGalleryTitle from '../components/DinamycGalleryTitle.astro';
import Gallery from '../components/features/gallery/Gallery.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import JoinOurCommunity from '../components/JoinOurCommunity.astro';
import { arteGallery, fotografiaGallery, musicaGallery } from '../data';
import Layout from '../layouts/Layout.astro';
import type { CategoryConfig } from '../types/gallery.types';

// Gallery configuration
const galleryCategories: CategoryConfig[] = [
  { id: 'arte', label: 'Arte', items: arteGallery },
  { id: 'musica', label: 'Música', items: musicaGallery },
  { id: 'fotografia', label: 'Fotografía', items: fotografiaGallery },
];
---

<Layout
  title="Inicio — Digital Revolution Web | Comunidad de Talentos"
  description="Descubre y conecta con creadores en arte, música, desarrollo y escritura. Explora talento y proyectos destacados en nuestra comunidad."
  image="/og-home.jpg"
>
  <Hero />
  <Concursos />
  <DinamycGalleryTitle />
  <Gallery categories={galleryCategories} />
  <ColaboracionesDestacadasTitle />
  <ColaboracionesDestacadas />
  <JoinOurCommunity />
  <Footer />
  <script type="module" src="/src/client/initializers/colaboraciones.ts"
  ></script>
  <script type="module" src="/src/client/initializers/galeria.ts"></script>
  <script type="module" src="/src/client/initializers/concursos.ts"></script>
  <script type="module" src="/src/client/initializers/accordeon.ts"></script>
</Layout>
